/**index.wxss**/

/* 基础变量设置，方便统一调整 */
page {
  --normal-font-size: 28rpx;
  --title-font-size: 36rpx;
  --subtitle-font-size: 32rpx;
  --small-spacing: 10rpx;
  --medium-spacing: 20rpx;
  --large-spacing: 30rpx;
  padding-bottom: 60rpx;
  background-color: #fff;
  box-sizing: border-box;
}

/* 适配不同字体大小设置 */
.text-small {
  --normal-font-size: 24rpx;
  --title-font-size: 32rpx;
  --subtitle-font-size: 28rpx;
}

.text-normal {
  --normal-font-size: 28rpx;
  --title-font-size: 36rpx;
  --subtitle-font-size: 32rpx;
}

.text-large {
  --normal-font-size: 32rpx;
  --title-font-size: 40rpx;
  --subtitle-font-size: 36rpx;
}

.container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  padding-bottom: 100rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main {
  width: 92%;
  display: flex;
  flex-direction: column;
  font-family: PingFang SC;
  padding: var(--medium-spacing);
  box-sizing: border-box;
}

/* 屏幕适配样式 - 由 JS 根据屏幕尺寸动态添加 */
.screen-large .main {
  width: 85%;
}

.screen-small .main {
  width: 96%;
  padding: var(--small-spacing);
}

/* 顶部导航样式 */
.folding-nav {
  position: sticky;
  top: -5rpx;
  width: 100%;
  z-index: 100;
  background-color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  border-radius: 0 0 16rpx 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  overflow: hidden;
}

.folding-nav.collapsed {
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 一级导航样式 */
.primary-nav {
  display: flex;
  white-space: nowrap;
  padding: 20rpx 0;
  background-color: #fff;
}

/* 横屏模式的导航 */
.primary-nav-landscape {
  white-space: normal;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  max-height: 200rpx;
  overflow-y: auto;
}

.primary-nav-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 30rpx;
  font-size: var(--title-font-size);
  color: #333;
  position: relative;
  transition: all 0.2s ease;
  text-align: center;
}

.screen-large .primary-nav-item {
  padding: 12rpx 40rpx;
}

.screen-small .primary-nav-item {
  padding: 8rpx 20rpx;
  font-size: calc(var(--title-font-size) - 4rpx);
}

.primary-nav-item.active {
  color: #1E3F8F; /* 西浦蓝 */
  font-weight: bold;
}

.primary-nav-item .indicator {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1E3F8F; /* 西浦蓝 */
  border-radius: 3rpx;
}

/* 二级导航样式 */
.secondary-nav {
  height: 60rpx;
  overflow: hidden;
  transition: height 0.3s ease;
  background-color: rgba(238, 238, 238, 0.5);
}

.secondary-nav.visible {
  height: 60rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.secondary-nav.hidden {
  height: 0;
}

.secondary-nav-scroll {
  white-space: nowrap;
  padding: 10rpx 0;
  display: flex;
}

/* 横屏模式的二级导航 */
.secondary-nav-landscape {
  white-space: normal;
  flex-wrap: wrap;
  justify-content: center;
  max-height: 200rpx;
  overflow-y: auto;
}

.secondary-nav-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 5rpx 20rpx;
  font-size: var(--subtitle-font-size);
  color: #666;
  border-radius: 30rpx;
  margin: 0 10rpx;
  transition: all 0.3s ease;
}

.screen-large .secondary-nav-item {
  padding: 8rpx 24rpx;
}

.screen-small .secondary-nav-item {
  padding: 4rpx 16rpx;
  font-size: calc(var(--subtitle-font-size) - 4rpx);
}

.secondary-nav-item.active {
  color: #fff;
  background-color: #1E3F8F;
  font-weight: bold;
}

/* 文本样式 */
.font_title_2 {
  font-size: var(--title-font-size);
  font-weight: bold;
  color: #000;
  line-height: 1.4;
}

.font_title_3 {
  font-size: var(--subtitle-font-size);
  font-weight: bold;
  line-height: 1.4;
}

.section_title {
  margin: var(--medium-spacing) 0 var(--small-spacing);
  color: #333;
  font-weight: 500;
}

.text_link {
  color: #1E3F8F;
  text-decoration: underline;
}

/* 内容区域样式 */
.seperator {
  position: relative;
  height: 2rpx;
  margin: var(--large-spacing) auto;
  width: 100%;
  background: linear-gradient(to right, transparent, #1E3F8F, transparent);
  opacity: 0.6;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.text_zone {
  margin: var(--medium-spacing) 0;
  color: #333;
  line-height: 1.6;
  font-size: var(--normal-font-size);
}

.screen-large .text_zone {
  line-height: 1.8;
}

.code_zone {
  background-color: #0E190E;
  color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 0rpx 32rpx;
  box-shadow: 0 12rpx 16rpx rgba(0, 0, 0, 0.15);
  position: relative;
  margin-bottom: var(--large-spacing);
  font-size: calc(var(--normal-font-size) - 2rpx);
}

.image_zone {
  position: relative;
  width: 100%;
  margin: 20rpx 0;
}

.image_zone image {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.image-loading, .image-error {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  color: #999;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.image-error {
  color: #ff4d4f;
}

/* 横屏模式下的图片样式 */
.landscape-mode .image_zone image {
  max-height: 400rpx;
  width: auto;
  max-width: 100%;
}

/* 步骤区域样式 */
.step_container {
  box-sizing: border-box;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: var(--large-spacing);
  margin-top: var(--medium-spacing);
  width: 100%;
}

.step_title,
.step_content {
  padding: var(--small-spacing);
  background-color: #fff;
}

.step_title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: var(--medium-spacing);
}

.step_id_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  gap: 0; /* Removed 8rpx gap */
  font-size: var(--subtitle-font-size);
  height: 50rpx; /* Increased to match elements */
  line-height: 50rpx; /* Adjusted to match elements */
  font-weight: 400;
}

.step_id_mark {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  background-color: #1E3F8F;
  border-radius: 4rpx 0 0 4rpx; /* Improved border radius */
  color: #fff;
  font-size: 30rpx;
  height: 50rpx; /* Consistent height */
  line-height: 50rpx;
  width: 132rpx;
  text-align: center;
  font-weight: 500;
}

.step_id_content {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 50rpx; /* Consistent height */
  line-height: 50rpx;
  text-align: center;
  background-color: #fff;
  color: rgba(0, 0, 0, 0.5);
  border: 1rpx solid rgba(0, 0, 0, 0.5);
  border-left: none;
  box-sizing: border-box;
  border-radius: 0 4rpx 4rpx 0; /* Improved border radius */
  font-size: 30rpx;
}

.step_content {
  background-color: #fff;
  color: #666;
  font-size: var(--normal-font-size);
  word-break: break-all;
}

/* 按钮样式 */
.btn-copy {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 36rpx;
  height: 36rpx;
  z-index: 1;
  border-radius: 12rpx;
}

/* 语言切换按钮 */
.language-toggle {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #1E3F8F; /* 西浦蓝 */
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--normal-font-size);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
}

/* 横屏模式下的语言切换按钮位置调整 */
.language-toggle.landscape {
  bottom: 40rpx;
  right: 40rpx;
}

/* 响应式布局内容区域调整 */
.content-area.landscape-mode .step_container {
  padding: var(--medium-spacing);
}